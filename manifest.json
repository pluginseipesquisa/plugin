{
  "name": "SEI pesquisa",
  "version": "1.0",
  "description": "Permite o display dos resultados da pesquisa em colunas",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": [
      "*://sei.ibama.gov.br/controlador.php?acao=procedimento_pesquisa*",
      "*://sei.ibama.gov.br/sei/controlador.php?acao=procedimento_pesquisa*",
      "*://*/controlador.php?acao=procedimento_pesquisa*",
      "*://*/sei/controlador.php?acao=procedimento_pesquisa*",
      "*://*/sip/controlador.php?acao=procedimento_pesquisa*"
    ],
      "run_at": "document_start",
      "all_frames": true,
      "js": [
        "content.js",
        "popup.js"
      ],
      "css":["stylesheets/p-sei-style.css"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/128.png"
  },
  "icons": {
    "128": "images/128.png"
  }
}
